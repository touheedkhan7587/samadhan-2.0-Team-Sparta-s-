      color: #fff;
      text-align: center;
      padding: 40px;
    }

    h2 {
      margin-bottom: 20px;
      text-shadow: 2px 2px 5px rgba(0,0,0,0.4);
    }

    .calculator {
      background: rgba(255, 255, 255, 0.1);
      padding: 25px;
      border-radius: 15px;
      width: 320px;
      margin: auto;
      box-shadow: 0px 8px 20px rgba(0,0,0,0.5);
    }

    label {
      display: inline-block;
      width: 100px;
      text-align: left;
    }

    input {
      margin: 8px 0;
      padding: 8px;
      border: none;
      border-radius: 8px;
      width: 150px;
      text-align: center;
      font-size: 14px;
    }

    button {
      padding: 10px 20px;
      margin-top: 15px;
      border: none;
      border-radius: 8px;
      background: #ff9800;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background: #e68900;
      transform: scale(1.05);
    }

    #result {
      margin-top: 20px;
      padding: 15px;
      border-radius: 10px;
      font-size: 16px;
      background: rgba(0, 0, 0, 0.3);
    }

    .pass {
      color: #4CAF50;
      font-weight: bold;
    }

