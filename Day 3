<!DOCTYPE html>
<html>
<head>
  <title>Student Marks Calculator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
    }
    input {
      margin: 5px;
      padding: 5px;
      width: 80px;
    }
    button {
      padding: 8px 15px;
      margin-top: 10px;
      cursor: pointer;
    }
    #result {
      margin-top: 20px;
      padding: 15px;
      border: 1px solid #ccc;
      width: 250px;
    }
  </style>
</head>
<body>
  <h2>Student Marks Calculator</h2>
  
  <label>Subject 1: </label><input type="number" id="sub1"><br>
  <label>Subject 2: </label><input type="number" id="sub2"><br>
  <label>Subject 3: </label><input type="number" id="sub3"><br>
  <label>Subject 4: </label><input type="number" id="sub4"><br>
  <label>Subject 5: </label><input type="number" id="sub5"><br>
  
  <button onclick="calculate()">Calculate</button>
  
  <div id="result">
    <p id="total"></p>
    <p id="percentage"></p>
    <p id="grade"></p>
  </div>
  
  <script>
    function calculate() {
      
      let s1 = Number(document.getElementById("sub1").value) || 0;
      let s2 = Number(document.getElementById("sub2").value) || 0;
      let s3 = Number(document.getElementById("sub3").value) || 0;
      let s4 = Number(document.getElementById("sub4").value) || 0;
      let s5 = Number(document.getElementById("sub5").value) || 0;

     
      let total = s1 + s2 + s3 + s4 + s5;
      let percentage = total / 5;

    
      let grade = "";
      if (percentage >= 90) grade = "A+";
      else if (percentage >= 75) grade = "A";
      else if (percentage >= 60) grade = "B";
      else if (percentage >= 40) grade = "C";
      else grade = "Fail";

      
      document.getElementById("total").innerText = "Total Marks: " + total;
      document.getElementById("percentage").innerText = "Percentage: " + percentage.toFixed(2) + "%";
      document.getElementById("grade").innerText = "Grade: " + grade;
    }
  </script>
</body>
</html>
